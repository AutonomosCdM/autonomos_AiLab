# Configuraciones de Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_CHANNEL=your-channel

# Configuraciones de Composio
COMPOSIO_API_KEY=your-composio-api-key
COMPOSIO_SLACK_INTEGRATION_TOKEN=your-slack-integration-token

# Configuraciones de Groq
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama3-70b-8192
GROQ_MAX_TOKENS=500

# Configuraciones de logging
LOG_LEVEL=INFO
LOG_FILE=slack_bot.log

# Configuraciones de personalidad
DEFAULT_PERSONALITY=lucius
CONTEXT_AWARENESS=true

# Configuraciones de seguridad
TOKEN_VALIDATION=true
RATE_LIMITING_ENABLED=true
MAX_REQUESTS_PER_MINUTE=30

# Configuraciones de despliegue
DEPLOYMENT_PLATFORM=google_compute_engine
DEPLOYMENT_MACHINE_TYPE=e2-micro
DEPLOYMENT_REGION=us-central1

# Características experimentales
MULTIMODAL_SUPPORT=false
MULTILINGUAL_SUPPORT=false

# Configuraciones de desarrollo
DEBUG=false
TESTING=false

# Integraciones opcionales
OPENAI_API_KEY=  # Opcional: para comparación de modelos
AWS_ACCESS_KEY_ID=  # Opcional: para integraciones con AWS
AWS_SECRET_ACCESS_KEY=  # Opcional: para integraciones con AWS

# Configuraciones de monitoreo
PROMETHEUS_METRICS_PORT=8000
SENTRY_DSN=  # Opcional: para seguimiento de errores
