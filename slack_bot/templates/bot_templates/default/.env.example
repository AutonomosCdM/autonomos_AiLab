# Configuración de Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_CHANNEL=your-default-channel-id

# Configuración de Groq
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama3-70b-8192  # Modelo de IA por defecto
GROQ_MAX_TOKENS=500  # Máximo de tokens por respuesta

# Configuración de logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=slack_bot.log  # Opcional: ruta del archivo de log

# Configuración de personalidad
DEFAULT_PERSONALITY=default  # Personalidad por defecto del bot

# Configuración de contexto
MAX_CONTEXT_MESSAGES=10  # Máximo de mensajes en el historial de conversación
CONTEXT_EXPIRY_MINUTES=60  # Tiempo en minutos antes de que expire el contexto

# Configuraciones adicionales
BOT_NAME=Lucius  # Nombre del bot
